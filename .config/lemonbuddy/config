[settings]
; Limit the amount of events sent to lemonbar within a set timeframe:
; - "Allow <throttle_limit> updates within <throttle_ms> of time"
; Default values:
;throttle_limit = 5
;throttle_ms = 50

[bar/top]
bottom = false
dock = false

width = 100%
height = 20

;offset_x = 0
;offset_y = 0

background = #00ffffff
foreground = #ffffff
;linecolor = #ff0000

spacing = 2
lineheight = 1

;separator = |

;locale = en_US.UTF-8

padding_left = 1
padding_right = 1
module_margin_left = 0
module_margin_right = 1

font-0 = Termsyn:size=8;0
font-1 = Siji:pixelsize=10;0
font-2 = FontAwesome:size=10;0

modules-left = mpd
modules-right = cpu ram backlight vol wifi battery date time

[bar/bottom]
bottom = true
dock = false

width = 100%
height = 20

background = #00ffffff
foreground = #fff
linecolor = #fff
spacing = 2
lineheight = 2

padding_left = 1
padding_right = 1
module_margin_left = 1
module_margin_right = 1

font-0 = Termsyn:size=8;0
font-1 = Siji:pixelsize=10;0
font-2 = FontAwesome:size=10;0

modules-left = i3mode
modules-center = i3
;modules-right =

[module/cpu]
type = internal/cpu
label =  %percentage%
format-padding = 1

[module/ram]
type = internal/memory
label =  %percentage_used%
format-padding = 1

[module/date]
type = internal/date
date =  %Y-%m-%d
format-padding = 1
interval = 60

[module/time]
type = internal/date
date =  %H:%M
format-padding = 1
interval = 1

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
poll_interval = 30
format-discharging = <ramp-capacity> <label-discharging>
format-padding = 1
label-charging =  %percentage%
label-discharging = %percentage%
label-full =  %percentage%

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-5 = 
ramp-capacity-6 = 
ramp-capacity-7 = 
ramp-capacity-8 = 
ramp-capacity-9 = 
ramp-capacity-10 = 

;bar-capacity-width = 10

[module/volume]
type = internal/volume
master_mixer = Master
speaker_mixer = IEC958
;headphone_mixer = IEC958
;headphone_control_numid = 9

format-volume-padding = 1
format-muted-padding = 1

label-volume =  %percentage%
label-muted =  MUTE

[module/backlight]
type = internal/backlight
card = intel_backlight
format = <ramp> <label>
format-padding = 1
label = %percentage%
ramp-0 = 
ramp-1 = 
ramp-2 = 

[module/wifi]
type = internal/network
interface = wlp2s0
interval = 5.0

format-connected = <ramp-signal> <label-connected>
format-padding = 1
label-connected = %{A:urxvt -name __nmtui -e nmtui:}%essid%  %{A}
label-disconnected = %{A:urxvt -name __nmtui -e nmtui:} NO CONNECTION %{A}
label-disconnected-background = #f00

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = #fff

[module/i3]
type = internal/i3
label-focused = 
label-focused-padding = 1
label-unfocused = 
label-unfocused-padding = 1
label-visible = 
label-visible-padding = 1
label-urgent = 
label-urgent-padding = 1
label-urgent-foreground = #f00

[module/xtitle]
type = custom/script
exec = xtitle -s
tail = true
format-padding = 1

[module/i3mode]
type = custom/script
exec = cat $HOME/.i3mode
tail = true
format-padding = 1
format-foreground = #666
format-background = #fff

[module/vol]
type = custom/script
exec = echo " $(pactl list sinks | grep -m 1 "Volume: " | awk '{print $5}')"
format-padding = 1

[module/mpd]
type = internal/mpd
format-online = <icon-prev> <icon-seekb> <toggle> <icon-seekf> <icon-next>  <label-song> <label-time>

icon-prev = 
icon-seekb = 
icon-play = 
icon-pause = 
icon-next = 
icon-seekf = 

bar-progress-width = 30
bar-progress-format = %{A4:mpdseek+2: A5:mpdseek-2:}%fill%%indicator%%empty%%{A A}
bar-progress-indicator = 
bar-progress-fill = ─
bar-progress-empty = ─

